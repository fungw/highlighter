{
 "name": "Highlighter",
 "version": "1",
 "description": "Dynamic CTRL+F. Simply highlight a word to find all instances of the word on the current page.",
 "manifest_version": 2,
 "browser_action": {
   "default_title": "Highlighter",
   "default_icon": "icon.png"
 },
 "permissions": [
   "tabs",
   "<all_urls>"
 ],
 "content_scripts": [
   {
     "matches": ["<all_urls>"],
     "js": ["jquery-2.2.4.min.js", "selection.js"],
     "css": ["selection.css"],
     "run_at": "document_start",
     "all_frames": true
   }
 ]
}